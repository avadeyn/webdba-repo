@model system_SIS.Models.StudentAdmission

@{
    Layout = "_AdmissionLayout";  // Specifies the layout to use
    ViewData["Title"] = "Admission";
}

<!-- Progress Steps -->
<div class="form-progress">
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Personal Information</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Contact</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Family</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>School</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Documents</small>
    </div>
    <div class="progress-step active">
        <div class="progress-circle active"></div>
        <small>Finish</small>
    </div>
</div>

<hr />

<div class="container mt-5">
    <!-- Step Title -->
    <h4 class="fw-bold mb-4" style="color: #172154;">Finish Your Application</h4>
    <p class="text-muted">Please review the information you provided. If everything is correct, click "Submit Application". If you need to make changes, use the "Back" button to go back to the specific step.</p>

    <form asp-action="Submit_application" method="post">
        <!-- Personal Information Section -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white fw-bold">Personal Information</div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-4"><strong>First Name:</strong></div>
                    <div class="col-md-8">@Model.FirstName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Middle Name:</strong></div>
                    <div class="col-md-8">@Model.MiddleName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Last Name:</strong></div>
                    <div class="col-md-8">@Model.LastName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>GradeLevel:</strong></div>
                    <div class="col-md-8">@Model.GradeLevel</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>LRN:</strong></div>
                    <div class="col-md-8">@Model.LRN</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>GWA:</strong></div>
                    <div class="col-md-8">@Model.GWA</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Email:</strong></div>
                    <div class="col-md-8">@Model.Email</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Date of Birth:</strong></div>
                    <div class="col-md-8">@Model.DateOfBirth.ToShortDateString()</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Religion:</strong></div>
                    <div class="col-md-8">@Model.Religion</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Height:</strong></div>
                    <div class="col-md-8">@Model.Height</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Weight:</strong></div>
                    <div class="col-md-8">@Model.Weight</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Place of Birth:</strong></div>
                    <div class="col-md-8">@Model.PlaceOfBirth</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Gender:</strong></div>
                    <div class="col-md-8">@Model.Gender</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Civil Status:</strong></div>
                    <div class="col-md-8">@Model.CivilStatus</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Disability:</strong></div>
                    <div class="col-md-8">@Model.Disability</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Ethnicity:</strong></div>
                    <div class="col-md-8">@Model.Ethnicity</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Mother Tongue:</strong></div>
                    <div class="col-md-8">@Model.MotherTongue</div>
                </div>

            </div>
        </div>

        <!-- Contact Information Section -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white fw-bold">Contact Information</div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Phone:</strong></div>
                    <div class="col-md-8">@Model.Phone</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Current Address:</strong></div>
                    <div class="col-md-8">@Model.CurrentAddress</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Current Zip Code:</strong></div>
                    <div class="col-md-8">@Model.CurrentZipCode</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Permanent Address:</strong></div>
                    <div class="col-md-8">@Model.PermanentAddress</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Permanent Zip Code:</strong></div>
                    <div class="col-md-8">@Model.PermanentZipCode</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Emergency Contact Person:</strong></div>
                    <div class="col-md-8">@Model.ContactPerson</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Emergency Contact Number:</strong></div>
                    <div class="col-md-8">@Model.ContactNumber</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Emergency Relationship:</strong></div>
                    <div class="col-md-8">@Model.Relationship</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Emergency Address:</strong></div>
                    <div class="col-md-8">@Model.EmergencyAddress</div>
                </div>
            </div>
        </div>

        <!-- Family Information Section -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white fw-bold">Family Information</div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Primary Guardian First Name:</strong></div>
                    <div class="col-md-8">@Model.ParentFirstName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Primary Guardian Maiden Name:</strong></div>
                    <div class="col-md-8">@Model.MaidenName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Primary Guardian Last Name:</strong></div>
                    <div class="col-md-8">@Model.ParentLastName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Primary Guardian Contact No:</strong></div>
                    <div class="col-md-8">@Model.ParentContactNo</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Primary Guardian Relationship:</strong></div>
                    <div class="col-md-8">@Model.ParentRelationship</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Secondary Guardian First Name:</strong></div>
                    <div class="col-md-8">@Model.SecondaryGuardianFirstName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Secondary Guardian Middle Name:</strong></div>
                    <div class="col-md-8">@Model.SecondaryGuardianMiddleName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Secondary Guardian Last Name:</strong></div>
                    <div class="col-md-8">@Model.SecondaryGuardianLastName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Secondary Guardian Contact No:</strong></div>
                    <div class="col-md-8">@Model.SecondaryGuardianContactNo</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Secondary Guardian Relationship:</strong></div>
                    <div class="col-md-8">@Model.SecondaryGuardianRelationship</div>
                </div>
            </div>
        </div>

        <!-- School Information Section -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white fw-bold">School Information</div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-4"><strong>School Name:</strong></div>
                    <div class="col-md-8">@Model.SchoolName</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>School Address:</strong></div>
                    <div class="col-md-8">@Model.SchoolAddress</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>School Contact:</strong></div>
                    <div class="col-md-8">@Model.SchoolContact</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>School Type:</strong></div>
                    <div class="col-md-8">@Model.SchoolType</div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-4"><strong>Year of Graduation:</strong></div>
                    <div class="col-md-8">@Model.YearOfGraduation</div>
                </div>
            </div>
        </div>

        <!-- Back and Next Buttons -->
        <div class="text-end">
            <a href="@Url.Action("Document", "AdmissionPortal")" class="btn-next text-decoration-none">Back</a>
            <button type="submit" class="btn btn-success text-decoration-none">Submit Application</button>
        </div>
    </form>
</div>