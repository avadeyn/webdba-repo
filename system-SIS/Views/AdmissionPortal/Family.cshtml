@model system_SIS.Models.StudentAdmission

@{
    Layout = "_AdmissionLayout";
    ViewData["Title"] = "Family Information";
}

<!-- Keeping the original progress steps HTML -->
<div class="form-progress">
    <!-- Progress steps remain exactly the same -->
</div>

<hr />

<form asp-controller="AdmissionPortal" asp-action="Family" method="post">
    <h4 class="fw-bold" style="color: #172154">PARENT'S / GUARDIAN'S INFORMATION</h4>
    <div class="container mt-4">
        <!-- Primary Guardian Section -->
        <h6 class="fw-bold" style="color: #172154">Parent / Guardian's Name - Primary</h6>
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="PrimaryGuardianFirstName" class="form-label">First Name <span style="color: red;">*</span></label>
                <input type="text" id="PrimaryGuardianFirstName" name="PrimaryGuardianFirstName"
                       class="form-control form-input" required value="@Model.PrimaryGuardianFirstName">
            </div>
            <div class="col-md-4">
                <label for="PrimaryGuardianMaidenName" class="form-label">Maiden Name</label>
                <input type="text" id="PrimaryGuardianMaidenName" name="PrimaryGuardianMaidenName"
                       class="form-control form-input" value="@Model.PrimaryGuardianMaidenName">
            </div>
            <div class="col-md-4">
                <label for="PrimaryGuardianLastName" class="form-label">Last Name <span style="color: red;">*</span></label>
                <input type="text" id="PrimaryGuardianLastName" name="PrimaryGuardianLastName"
                       class="form-control form-input" required value="@Model.PrimaryGuardianLastName">
            </div>
            <div class="col-md-4">
                <label for="PrimaryGuardianContactNo" class="form-label">Contact Number <span style="color: red;">*</span></label>
                <input type="tel" id="PrimaryGuardianContactNo" name="PrimaryGuardianContactNo"
                       class="form-control form-input" required pattern="^\d{11}$"
                       title="Contact number must be exactly 11 digits." value="@Model.PrimaryGuardianContactNo">
            </div>
            <div class="col-md-4">
                <label for="PrimaryGuardianRelationship" class="form-label">Relationship <span style="color: red;">*</span></label>
                <input type="text" id="PrimaryGuardianRelationship" name="PrimaryGuardianRelationship"
                       class="form-control form-input" required value="@Model.PrimaryGuardianRelationship">
            </div>
        </div>

        <!-- Secondary Guardian Section -->
        <h6 class="fw-bold" style="color: #172154">Parent / Guardian's Name - Secondary</h6>
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="SecondaryGuardianFirstName" class="form-label">First Name <span style="color: red;">*</span></label>
                <input type="text" id="SecondaryGuardianFirstName" name="SecondaryGuardianFirstName"
                       class="form-control form-input" required value="@Model.SecondaryGuardianFirstName">
            </div>
            <div class="col-md-4">
                <label for="SecondaryGuardianMiddleName" class="form-label">Middle Name</label>
                <input type="text" id="SecondaryGuardianMiddleName" name="SecondaryGuardianMiddleName"
                       class="form-control form-input" value="@Model.SecondaryGuardianMiddleName">
            </div>
            <div class="col-md-4">
                <label for="SecondaryGuardianLastName" class="form-label">Last Name <span style="color: red;">*</span></label>
                <input type="text" id="SecondaryGuardianLastName" name="SecondaryGuardianLastName"
                       class="form-control form-input" required value="@Model.SecondaryGuardianLastName">
            </div>
            <div class="col-md-4">
                <label for="SecondaryGuardianContactNo" class="form-label">Contact Number <span style="color: red;">*</span></label>
                <input type="tel" id="SecondaryGuardianContactNo" name="SecondaryGuardianContactNo"
                       class="form-control form-input" required pattern="^\d{11}$"
                       title="Contact number must be exactly 11 digits." value="@Model.SecondaryGuardianContactNo">
            </div>
            <div class="col-md-4">
                <label for="SecondaryGuardianRelationship" class="form-label">Relationship <span style="color: red;">*</span></label>
                <input type="text" id="SecondaryGuardianRelationship" name="SecondaryGuardianRelationship"
                       class="form-control form-input" required value="@Model.SecondaryGuardianRelationship">
            </div>
        </div>
    </div>

    <!-- Back and Next Buttons -->
    <div class="text-end">
        <a href="@Url.Action("Contact", "AdmissionPortal")" class="btn-next text-decoration-none">Back</a>
        <button type="submit" class="btn-next">Next</button>
    </div>
</form>