@{
    Layout = "_AdmissionLayout";  // Specifies the layout to use
    ViewData["Title"] = "Admission";
}

<script src="~/js/admission_portal/index.js"></script>

<!-- Progress Steps -->
<div class="form-progress">
    <div class="progress-step active">
        <div class="progress-circle active"></div>
        <small>Personal Information</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Contact</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Family</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>School</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Documents</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Finish</small>
    </div>
</div>

<hr />

<style>
    /* Add styles for invalid fields only after user input */
    input:focus:invalid, select:focus:invalid {
        border: 1px solid red;
    }

    input:focus:valid, select:focus:valid {
        border: 1px solid green;
    }
</style>



<form>
    <div class="row mb-3 align-items-end">
        <!-- LRN -->
        <div class="col-md-3">
            <label for="lrn" class="form-label">Learner Reference No. (LRN) <span style="color: red;">*</span></label>
            <input type="text" id="lrn" class="form-control form-input" required pattern="^\d{12}$" maxlength="12" title="LRN must be exactly 12 digits and only integers.">
        </div>


        <!-- GWA -->
        <div class="col-md-3">
            <label for="gwa" class="form-label">GWA <span style="color: red;">*</span></label>
            <input type="number" id="gwa" class="form-control form-input" required min="64" max="100" step="0.01" title="GWA must be between 64 and 100.">
        </div>

        <!-- Incoming Grade -->
        <div class="col-md-3">
            <label for="incomingGrade" class="form-label">Incoming Grade Level <span style="color: red;">*</span></label>
            <select id="incomingGrade" class="form-control form-input" required>
                <option value="">Choose</option>
                <option value="7">Grade 7</option>
                <option value="8">Grade 8</option>
                <option value="9">Grade 9</option>
                <option value="10">Grade 10</option>
            </select>
        </div>
    </div>

    <div class="row mb-3 align-items-end">
        <!-- First Name -->
        <div class="col-md-3">
            <label for="firstName" class="form-label">First Name <span style="color: red;">*</span></label>
            <input type="text" id="firstName" class="form-control form-input" required title="Name must be in uppercase letters.">
        </div>

        <!-- Middle Name -->
        <div class="col-md-3">
            <label for="middleName" class="form-label">Middle Name</label>
            <input type="text" id="middleName" class="form-control form-input" title="Name must be in uppercase letters.">
        </div>

        <!-- Last Name -->
        <div class="col-md-3">
            <label for="lastName" class="form-label">Last Name <span style="color: red;">*</span></label>
            <input type="text" id="lastName" class="form-control form-input" required title="Name must be in uppercase letters.">
        </div>
    </div>
</form>

