@{
    Layout = "_AdmissionLayout";  // Specifies the layout to use
    ViewData["Title"] = "Admission";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <div class="logo me-3"></div>
        <div>
            <h5 class="mb-0">Nadine Borja</h5>
            <p class="applicant-info text-muted mb-0">Applicant</p>
        </div>
        <div class="ms-auto">
            <i class="bi bi-gear-fill fs-5"></i>
        </div>
    </div>

    <!-- Main Section -->
    <div class="row">
        <!-- Left: General Instructions -->
        <div class="col-md-4">
            <div class="general-instructions">
                <h6 class="fw-bold">General Instructions</h6>
                <p class="text-primary">Date of Registration: January 09, 2025</p> 
                <p>Please make sure that the information you provide is true and correct. <br />Ensure all required fields are filled out.</p>
            </div>
        </div>

        <!-- Right: Form -->
        <div class="col-md-8">
            <div class="form-container">
                <!-- Application ID -->
                <p class="text-primary fw-bold">Application Id: 123456789</p>

                <!-- Progress Steps -->
                <div class="form-progress">
                    <div class="progress-step active">
                        <div class="progress-circle active"></div>
                        <small>Personal Information</small>
                    </div>
                    <div class="progress-step">
                        <div class="progress-circle"></div>
                        <small>Contact</small>
                    </div>
                    <div class="progress-step">
                        <div class="progress-circle"></div>
                        <small>Family</small>
                    </div>
                    <div class="progress-step">
                        <div class="progress-circle"></div>
                        <small>School</small>
                    </div>
                    <div class="progress-step">
                        <div class="progress-circle"></div>
                        <small>Documents</small>
                    </div>
                </div>

                <!-- Form Fields -->
                <form>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label for="firstName" class="form-label">First Name *</label>
                            <input type="text" id="firstName" class="form-control form-input" required>
                        </div>
                        <div class="col-md-3">
                            <label for="middleName" class="form-label">Middle Name *</label>
                            <input type="text" id="middleName" class="form-control form-input" required>
                        </div>
                        <div class="col-md-3">
                            <label for="lastName" class="form-label">Last Name *</label>
                            <input type="text" id="lastName" class="form-control form-input" required>
                        </div>
                        <div class="col-md-3">
                            <label for="gender" class="form-label">Gender *</label>
                            <input type="text" id="gender" class="form-control form-input" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label for="dob" class="form-label">Date of Birth *</label>
                            <input type="date" id="dob" class="form-control form-input" required>
                        </div>
                    </div>

                    <!-- Next Button -->
                    <div class="text-end">
                        <button type="button" class="btn-next">Next</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>