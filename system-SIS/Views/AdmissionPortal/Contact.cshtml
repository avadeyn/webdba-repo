@{
    Layout = "_AdmissionLayout";  // Specifies the layout to use
    ViewData["Title"] = "Admission";
}

<!-- Progress Steps -->
<div class="form-progress">
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Personal Information</small>
    </div>
    <div class="progress-step active">
        <div class="progress-circle active"></div>
        <small>Contact</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Family</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>School</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Documents</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Finish</small>
    </div>
</div>

<hr />

<form>
    <div class="container mt-4">
        <!-- Contact Information -->
        <h6 class="fw-bold" style="color: #172154">Contact Information</h6>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="phone" class="form-label">Phone Number <span style="color: red;">*</span></label>
                <input type="tel" id="phone" class="form-control form-input" required pattern="^\d{11}$" title="Phone number must be exactly 11 digits.">
            </div>
        </div>

        <div class="row mb-3">
            <!-- Current Address -->
            <h6 class="fw-bold" style="color: #172154">Current Address</h6>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="currentAddress" class="form-label">Address <span style="color: red;">*</span></label>
                    <input type="text" id="currentAddress" class="form-control form-input" style="height: 45px; font-size: 16px; padding: 10px;" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="currentZipCode" class="form-label">Zip Code <span style="color: red;">*</span></label>
                    <input type="text" id="currentZipCode" class="form-control form-input" style="height: 45px; font-size: 16px; padding: 10px;" required pattern="^\d{4}$" title="Zip code must be exactly 4 digits.">
                </div>
            </div>
        </div>

        <!-- Permanent Address -->
        <h6 class="fw-bold" style="color: #172154">Permanent Address</h6>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="sameAsCurrentAddress" onclick="copyCurrentAddress()">
            <label class="form-check-label" for="sameAsCurrentAddress">
                Same as Current Address
            </label>
        </div>

        <div class="row mb-3">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="permanentAddress" class="form-label">Address <span style="color: red;">*</span></label>
                    <input type="text" id="permanentAddress" class="form-control form-input" style="height: 45px; font-size: 16px; padding: 10px;" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="permanentZipCode" class="form-label">Zip Code <span style="color: red;">*</span></label>
                    <input type="text" id="permanentZipCode" class="form-control form-input" style="height: 45px; font-size: 16px; padding: 10px;" required pattern="^\d{4}$" title="Zip code must be exactly 4 digits.">
                </div>
            </div>
        </div>

        <!-- In case of Emergency -->
        <h6 class="fw-bold" style="color: #172154;">In case of Emergency</h6>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="contactPerson" class="form-label">Contact Person <span style="color: red;">*</span></label>
                <input type="text" id="contactPerson" class="form-control form-input" style="height: 45px; font-size: 16px; padding: 10px;" required>
            </div>
            <div class="col-md-6">
                <label for="contactNumber" class="form-label">Contact Number <span style="color: red;">*</span></label>
                <input type="tel" id="contactNumber" class="form-control form-input" style="height: 45px; font-size: 16px; padding: 10px;" required pattern="^\d{11}$" title="Contact number must be exactly 11 digits.">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="relationship" class="form-label">Relationship <span style="color: red;">*</span></label>
                <input type="text" id="relationship" class="form-control form-input" style="height: 45px; font-size: 16px; padding: 10px;" required>
            </div>
            <div class="col-md-6">
                <label for="emergencyAddress" class="form-label">Address <span style="color: red;">*</span></label>
                <input type="text" id="emergencyAddress" class="form-control form-input" style="height: 45px; font-size: 16px; padding: 10px;" required>
            </div>
        </div>

    </div>

    <!-- Back and Next Buttons -->
    <div class="text-end">
        <a href="@Url.Action("Index", "AdmissionPortal")" class="btn-next text-decoration-none">Back</a>
        <button asp-action="Family" type="submit" class="btn-next">Next</button>
    </div>
</form>

<script>
    // Copy current address to permanent address if checkbox is checked
    function copyCurrentAddress() {
        if (document.getElementById("sameAsCurrentAddress").checked) {
            document.getElementById("permanentAddress").value = document.getElementById("currentAddress").value;
            document.getElementById("permanentZipCode").value = document.getElementById("currentZipCode").value;
        } else {
            document.getElementById("permanentAddress").value = '';
            document.getElementById("permanentZipCode").value = '';
        }
    }
</script>
