@{
    Layout = "_AdmissionLayout";  // Specifies the layout to use
    ViewData["Title"] = "Admission";
}

<!-- Progress Steps -->
<div class="form-progress">
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Personal Information</small>
    </div>
    <div class="progress-step active">
        <div class="progress-circle active"></div>
        <small>Contact</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Family</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>School</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Documents</small>
    </div>
    <div class="progress-step">
        <div class="progress-circle"></div>
        <small>Finish</small>
    </div>
</div>

<hr />

<form>
    <div class="container mt-4">
        <!-- Contact Information -->
        <h6 class="fw-bold" style="color: #172154">Contact Information</h6>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="email" class="form-label">Email <span style="color: red;">*</span></label>
                <input type="email" id="email" class="form-control form-input" required>
            </div>
            <div class="col-md-6">
                <label for="phone" class="form-label">Phone Number <span style="color: red;">*</span></label>
                <input type="text" id="phone" class="form-control form-input" required>
            </div>
        </div>

        <!-- Current Address -->
        <h6 class="fw-bold" style="color: #172154">Current Address</h6>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="currentHouseNo" class="form-label">House No./Lot/Block <span style="color: red;">*</span></label>
                <input type="text" id="currentHouseNo" class="form-control form-input" required>
            </div>
            <div class="col-md-6">
                <label for="currentStreetName" class="form-label">Street Name <span style="color: red;">*</span></label>
                <input type="text" id="currentStreetName" class="form-control form-input" required>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="currentVillage" class="form-label">Village/Subdivision <span style="color: red;">*</span></label>
                <input type="text" id="currentVillage" class="form-control form-input" required>
            </div>
            <div class="col-md-6">
                <label for="currentBarangay" class="form-label">Barangay <span style="color: red;">*</span></label>
                <input type="text" id="currentBarangay" class="form-control form-input" required>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="currentCity" class="form-label">City/Municipality <span style="color: red;">*</span></label>
                <input type="text" id="currentCity" class="form-control form-input" required>
            </div>
            <div class="col-md-6">
                <label for="currentProvince" class="form-label">Province <span style="color: red;">*</span></label>
                <input type="text" id="currentProvince" class="form-control form-input" required>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="currentZipCode" class="form-label">Zip Code <span style="color: red;">*</span></label>
                <input type="text" id="currentZipCode" class="form-control form-input" required>
            </div>
        </div>

        <!-- Permanent Address -->
        <h6 class="fw-bold" style="color: #172154">Permanent Address</h6>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="sameAsCurrentAddress" onclick="copyCurrentAddress()">
            <label class="form-check-label" for="sameAsCurrentAddress">
                Same as Current Address
            </label>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="permanentHouseNo" class="form-label">House No./Lot/Block <span style="color: red;">*</span></label>
                <input type="text" id="permanentHouseNo" class="form-control form-input" required>
            </div>
            <div class="col-md-6">
                <label for="permanentStreetName" class="form-label">Street Name <span style="color: red;">*</span></label>
                <input type="text" id="permanentStreetName" class="form-control form-input" required>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="permanentVillage" class="form-label">Village/Subdivision <span style="color: red;">*</span></label>
                <input type="text" id="permanentVillage" class="form-control form-input" required>
            </div>
            <div class="col-md-6">
                <label for="permanentBarangay" class="form-label">Barangay <span style="color: red;">*</span></label>
                <input type="text" id="permanentBarangay" class="form-control form-input" required>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="permanentCity" class="form-label">City/Municipality <span style="color: red;">*</span></label>
                <input type="text" id="permanentCity" class="form-control form-input" required>
            </div>
            <div class="col-md-6">
                <label for="permanentProvince" class="form-label">Province <span style="color: red;">*</span></label>
                <input type="text" id="permanentProvince" class="form-control form-input" required>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="permanentZipCode" class="form-label">Zip Code <span style="color: red;">*</span></label>
                <input type="text" id="permanentZipCode" class="form-control form-input" required>
            </div>
        </div>
    </div>

    <!-- Back and Next Buttons -->
    <div class="text-end">
        <a href="@Url.Action("Index", "AdmissionPortal")" class="btn-next text-decoration-none">Back</a>
        <button asp-action="Family" type="submit" class="btn-next">Next</button>
    </div>
</form>
