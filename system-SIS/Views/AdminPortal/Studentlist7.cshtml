@{
    Layout = "Admin_Layout"; // Specifies the layout to use
    ViewData["Title"] = "Grade 7 Page"; // Ensure the title is descriptive
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden;">
    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">


    <!-- Main Content -->
    <div style="background-color: rgba(220, 232, 253, 0.9); padding: 20px; border-radius: 10px;">
        <section class="fixed ml-72 px-11 py-6 w-full top-20 left-0" style="font-weight: bold;">
            <p class="text-sm text-black">
                <i class="fas fa-home text-black"></i>
                <a asp-controller="AdminPortal" asp-action="Student" class="text-black" style="text-decoration: none;">Student</a>
                <a asp-controller="AdminPortal" asp-action="Student" class="text-black" style="text-decoration: none;">/ Grade 7</a>/ Section Name
            </p>
        </section>



        <div class="mt-4 d-flex justify-content-between align-items-center">
            <!-- Add Section Button -->
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addSectionModal">
                Add Student
            </button>

            <!-- Filter Dropdown -->
            <select class="form-select w-auto ms-auto" aria-label="Filter by Year">
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <option value="2024">2024</option>
                <option value="2025">2025</option>
            </select>
        </div>


        <!-- Table -->
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th>Section Name</th>
                    <th>Count of Students</th>
                    <th>Adviser</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr class="@(ViewData["ActiveMenu"]?.ToString() == "Forms" ? "active fw-bold" : "")"
                    style="cursor: pointer;"
                    onclick="handleRowClick(event)">
                    <td>Grade 7 - A</td>
                    <td>30</td>
                    <td>Mr. John Doe</td>
                    <td>
                        <!-- Edit Button -->
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editSectionModal">
                            <i class="fas fa-edit"></i>
                        </button>

                        <!-- Delete Button -->
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteSectionModal">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
        <!-- Edit Modal -->
        <div class="modal fade" id="editSectionModal" tabindex="-1" aria-labelledby="editSectionModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editSectionModalLabel">Edit Section</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="sectionName" class="form-label">Section Name</label>
                                <input type="text" class="form-control" id="sectionName" placeholder="Enter Section Name">
                            </div>
                            <div class="mb-3">
                                <label for="countOfStudents" class="form-label">Count of Students</label>
                                <input type="number" class="form-control" id="countOfStudents" placeholder="Enter Count of Students">
                            </div>
                            <div class="mb-3">
                                <label for="adviser" class="form-label">Adviser</label>
                                <input type="text" class="form-control" id="adviser" placeholder="Enter Adviser Name">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteSectionModal" tabindex="-1" aria-labelledby="deleteSectionModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteSectionModalLabel">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this section?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>

    <!-- Delete Section Modal -->
    <div class="modal fade" id="deleteSectionModal" tabindex="-1" aria-labelledby="deleteSectionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteSectionModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this section?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="deleteSection()">Delete Section</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Add Section Modal (Existing) -->
    <div class="modal fade" id="addSectionModal" tabindex="-1" aria-labelledby="addSectionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSectionModalLabel">Add Section</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addSectionForm">
                        <div class="mb-3">
                            <label for="addSectionName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="addSectionName" placeholder="Enter Section Name">
                        </div>
                        <div class="mb-3">
                            <label for="addCountOfStudents" class="form-label">Date o</label>
                            <input type="number" class="form-control" id="addCountOfStudents" placeholder="Enter Count of Students">
                        </div>
                        <div class="mb-3">
                            <label for="addAdviser" class="form-label">Adviser</label>
                            <input type="text" class="form-control" id="addAdviser" placeholder="Enter Adviser Name">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="saveNewSection()">Save Section</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts for Modal -->
        <script>
            let selectedSection = {}; // Object to hold the selected section data

            // Open Edit Modal with selected row's data
            function openEditModal(section) {
                selectedSection = section;

                // Populate the Edit Modal with the section data
                document.getElementById('editSectionName').value = section.name;
                document.getElementById('editCountOfStudents').value = section.countOfStudents;
                document.getElementById('editAdviser').value = section.adviser;

                // Show the modal
                const editModal = new bootstrap.Modal(document.getElementById('editSectionModal'));
                editModal.show();
            }

            // Save changes from the Edit Section Modal
            function saveSection() {
                const sectionName = document.getElementById('editSectionName').value;
                const countOfStudents = document.getElementById('editCountOfStudents').value;
                const adviser = document.getElementById('editAdviser').value;

                // Update logic (e.g., send updated data to the server)
                console.log('Updated Section:', { ...selectedSection, sectionName, countOfStudents, adviser });

                // Close the modal
                const editModal = bootstrap.Modal.getInstance(document.getElementById('editSectionModal'));
                editModal.hide();
            }

            // Open Delete Modal with selected section's data
            function openDeleteModal(section) {
                selectedSection = section;

                // Show the modal
                const deleteModal = new bootstrap.Modal(document.getElementById('deleteSectionModal'));
                deleteModal.show();
            }

            // Delete the selected section
            function deleteSection() {
                // Delete logic (e.g., send delete request to the server)
                console.log('Deleted Section:', selectedSection);

                // Close the modal
                const deleteModal = bootstrap.Modal.getInstance(document.getElementById('deleteSectionModal'));
                deleteModal.hide();
            }

            // Function to handle row click and navigate if no modal is clicked
            function handleRowClick(event, section) {
                // Check if the clicked target is a modal button (Edit or Delete)
                if (event.target.closest('button')) {
                    return; // Do nothing if a button was clicked, prevent row click navigation
                }

                // If the target is not a button, perform navigation (could be redirected to the Studentlist page or any other action)
                window.location.href = '@Url.Action("Studentlist", "AdminPortal", new { area = "" })';
            }
        </script>






</body>
