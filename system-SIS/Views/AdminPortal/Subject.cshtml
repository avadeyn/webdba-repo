@{
    Layout = "Admin_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; width: 100vw; margin: 0;">
    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <!-- Main Content -->
    <div class="container" style="background-color: rgba(220, 232, 253, 0.9); padding: 20px; border-radius: 10px;">
        <section class="fixed ml-72 px-11 py-6 w-full top-20 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-user text-black fs-5 me-2"></i>
                <a asp-controller="AdminPortal" asp-action="Subject" class="text-black text-decoration-none">K-12 Curriculum</a>
            </p>
        </section>


        <div class="table-responsive mt-2">
            <table class="table table-striped">
                <thead class="table-secondary text-white">
                    <tr>
                        <th>Subject Name</th>
                        <th>Abbreviation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Filipino</a>
                        </td>
                        <td>FIL</td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">English</a>
                        </td>
                        <td>ENG</td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Mathematics</a>
                        </td>
                        <td>MATH</td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Science</a>
                        </td>
                        <td>SCI</td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Araling Panlipunan (AP)</a>
                        </td>
                        <td>AP</td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Edukasyon sa Pagpapakatao (EsP)</a>
                        </td>
                        <td>ESP</td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Technology and Livelihood Education (TLE)</a>
                        </td>
                        <td>TLE</td>
                    </tr>
                    <tr>
                        <td>
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">MAPEH</a>
                        </td>
                        <td>MAPEH</td>
                    </tr>
                    <tr>
                        <td class="ps-4">
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Music</a>
                        </td>
                        <td>MUS</td>
                    </tr>
                    <tr>
                        <td class="ps-4">
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Arts</a>
                        </td>
                        <td>ART</td>
                    </tr>
                    <tr>
                        <td class="ps-4">
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">PE</a>
                        </td>
                        <td>PE</td>
                    </tr>
                    <tr>
                        <td class="ps-4">
                            <a href="@Url.Action("SubjectDetails", "AdminPortal")" class="text-decoration-none text-black">Health</a>
                        </td>
                        <td>HLTH</td>
                    </tr>
                </tbody>
            </table>
        </div>



    </div>


    <!-- Modal for adding a new subject -->
    <div class="modal fade" id="addSubjectModal" tabindex="-1" aria-labelledby="addSubjectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="addSubjectModalLabel">Add New Subject</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="subjectName" class="form-label">Subject Name</label>
                            <input type="text" class="form-control" id="subjectName" placeholder="Enter Subject Name">
                        </div>
                        <div class="mb-3">
                            <label for="abbreviation" class="form-label">Abbreviation</label>
                            <input type="text" class="form-control" id="abbreviation" placeholder="Enter Abbreviation">
                        </div>
                        <div class="mb-3">
                            <label for="gradeLevel" class="form-label">Grade Level</label>
                            <select class="form-select" id="gradeLevel">
                                <option value="7">Grade 7</option>
                                <option value="8">Grade 8</option>
                                <option value="9">Grade 9</option>
                                <option value="10">Grade 10</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="program" class="form-label">Program</label>
                            <select class="form-select" id="program">
                                <option value="Regular">Regular</option>
                                <option value="Transferee">Transferee</option>
                                <option value="Returnee">Returnee</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save Subject</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Subject Modal -->
    <div class="modal fade" id="editSubjectModal" tabindex="-1" aria-labelledby="editSubjectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editSubjectModalLabel">Edit Subject</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="mb-3">
                            <label for="subjectNameEdit" class="form-label">Subject Name</label>
                            <input type="text" class="form-control" id="subjectNameEdit" value="English">
                        </div>
                        <div class="mb-3">
                            <label for="abbreviationEdit" class="form-label">Abbreviation</label>
                            <input type="text" class="form-control" id="abbreviationEdit" value="ENG">
                        </div>
                        <div class="mb-3">
                            <label for="gradeLevelEdit" class="form-label">Grade Level</label>
                            <select class="form-select" id="gradeLevelEdit">
                                <option value="7" selected>Grade 7</option>
                                <option value="8">Grade 8</option>
                                <option value="9">Grade 9</option>
                                <option value="10">Grade 10</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="programEdit" class="form-label">Program</label>
                            <select class="form-select" id="programEdit">
                                <option value="Regular" selected>Regular</option>
                                <option value="Transferee">Transferee</option>
                                <option value="Returnee">Returnee</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</body>
