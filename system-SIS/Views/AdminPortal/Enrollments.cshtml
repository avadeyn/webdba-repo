@{
    Layout = "Admin_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; width: 100vw; margin: 0;">
    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <!-- Main Content -->
    <div class="container" style="background-color: rgba(220, 232, 253, 0.9); padding: 20px; border-radius: 10px;">
        <section class="fixed ml-72 px-11 py-6 w-full top-20 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-user-check text-black"></i>
                <a asp-controller="AdminPortal" asp-action="Enrollment" class="text-black" style="text-decoration: none;">Enrollment</a>
            </p>
        </section>

        <!-- Dropdown Section -->
        <div class="row mb-3">
            <!-- Incoming Grade -->
            <div class="col-12 col-md-3 mb-2">
                <label for="dropdownIncomingGradeLevel" class="form-label fs-6 visually-hidden">Select Incoming Grade</label>
                <select class="form-select fs-6 w-100" id="dropdownIncomingGradeLevel" aria-label="Select Incoming Grade">
                    <option value="" disabled selected>Select Incoming Grade</option>
                    <option value="7">Grade 7</option>
                    <option value="8">Grade 8</option>
                    <option value="9">Grade 9</option>
                    <option value="10">Grade 10</option>
                </select>
            </div>

            <!-- School Year -->
            <div class="col-12 col-md-3 mb-2">
                <label for="dropdownSchoolYear" class="form-label fs-6 visually-hidden">Select School Year</label>
                <select class="form-select fs-6 w-100" id="dropdownSchoolYear" aria-label="Select School Year">
                    <option value="" disabled selected>Select School Year</option>
                    <option value="2020-2021">2020 - 2021</option>
                    <option value="2021-2022">2021 - 2022</option>
                    <option value="2022-2023">2022 - 2023</option>
                    <option value="2023-2024">2023 - 2024</option>
                    <option value="2024-2025">2024 - 2025</option>
                </select>
            </div>

            <!-- Subject Dropdown -->
            <div class="col-12 col-md-3 mb-2">
                <label for="dropdownSubject" class="form-label fs-6 visually-hidden">Select Subject</label>
                <select class="form-select fs-6 w-100" id="dropdownSubject" aria-label="Choose Subject">
                    <option value="" disabled selected>Select Subject</option>
                    <option value="english">English</option>
                    <option value="math">Math</option>
                    <option value="science">Science</option>
                    <option value="history">History</option>
                </select>
            </div>

            <!-- Section Dropdown -->
            <div class="col-12 col-md-3 mb-2">
                <label for="dropdownSection" class="form-label fs-6 visually-hidden">Select Section</label>
                <select class="form-select fs-6 w-100" id="dropdownSection" aria-label="Select Section">
                    <option value="" disabled selected>Select Section</option>
                    <option value="palladium">Palladium</option>
                    <option value="ruby">Ruby</option>
                    <option value="emerald">Emerald</option>
                    <option value="sapphire">Sapphire</option>
                </select>
            </div>
        </div>

        <!-- Add Section Button -->
        <button type="button" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#addSectionModal">
            Enroll Student
        </button>

        <!-- Table -->
        <div class="table-responsive mt-3">
            <table class="table">
                <thead class="table-secondary text-white">
                    <tr>
                        <th><input type="checkbox" id="selectAll" onclick="selectAllCheckboxes(this)" /></th>
                        <th>#</th>
                        <th>LRN</th>
                        <th>Student Name</th>
                        <th>Gender</th>
                        <th>Grade Level</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="@(ViewData["ActiveMenu"]?.ToString() == "Studentlist7" ? "active fw-bold" : "")"
                        style="cursor: pointer;"
                        onclick="window.location.href='@Url.Action("Studentlist7", "AdminPortal", new { area = "" })';">
                        <td><input type="checkbox" class="studentCheckbox" /></td>
                        <td>1</td>
                        <td>123456789</td>
                        <td>Jane Doe</td>
                        <td>Female</td>
                        <td>Grade 7</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Function to select/deselect all checkboxes
        function selectAllCheckboxes(source) {
            const checkboxes = document.querySelectorAll('.studentCheckbox');
            checkboxes.forEach(checkbox => checkbox.checked = source.checked);
        }
    </script>
</body>
