        function validateAndFormatScheduleData(formData) {
            const { day, session, subject, startTime, endTime, classId } = formData;

            // Validation
            if (!day || !session || !subject || !startTime || !endTime || !classId) {
                throw new Error('All fields are required');
            }

            if (startTime >= endTime) {
                throw new Error('End time must be after start time');
            }

            // Format data to match backend model
            return {
                classId: parseInt(classId),
                day: day.charAt(0).toUpperCase() + day.slice(1).toLowerCase(),
                session: session.charAt(0).toUpperCase() + session.slice(1).toLowerCase(),
                subject: subject,
                start: startTime,
                end: endTime,
                isDeleted: false
            };
        }

        function updateScheduleTable(schedules) {
            const tableBody = document.querySelector('.schedule-table tbody');
            if (!tableBody) return;

            if (!schedules || schedules.length === 0) {
                tableBody.innerHTML = `
                    <tr>
                        <td colspan="6" class="text-center">
                            No schedules found
                        </td>
                    </tr>
                `;
                return;
            }

            tableBody.innerHTML = schedules
                .filter(schedule => !schedule.isDeleted)
                .sort((a, b) => {
                    const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'];
                    return days.indexOf(a.day) - days.indexOf(b.day) ||
                           a.start.localeCompare(b.start);
                })
                .map(schedule => `
                    <tr data-schedule-id="${schedule.id}">
                        <td>${schedule.day || ''}</td>
                        <td>${schedule.session || ''}</td>
                        <td>${schedule.subject || ''}</td>
                        <td>${formatTime(schedule.start) || ''}</td>
                        <td>${formatTime(schedule.end) || ''}</td>
                        <td>
                            <button type="button" class="btn btn-warning btn-sm me-2"
                                    onclick="editSchedule(${schedule.id})"
                                    data-bs-toggle="modal"
                                    data-bs-target="#editModal">
                                Edit
                            </button>
                            <button type="button" class="btn btn-danger btn-sm"
                                    onclick="deleteSchedule(${schedule.id})">
                                Delete
                            </button>
                        </td>
                    </tr>
                `).join('');
        }

