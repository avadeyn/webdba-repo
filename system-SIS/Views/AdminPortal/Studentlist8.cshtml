@{
    Layout = "Admin_Layout";  
    ViewData["Title"] = "Grade 8 Page";
}

<style>
    .container {
        background-color: #dce8fd;
        padding: 20px;
        border-radius: 10px;
    }
</style>

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden">
    <img src="~/images/bgjr.png" alt="Background Image" class="img-fluid w-100" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <section class="fixed ml-72 px-11 py-6 w-full top-20 left-0" style="font-weight: bold;">
        <p class="text-sm text-black">
            <i class="fas fa-home text-black"></i>
            <a asp-controller="AdminPortal" asp-action="Student" class="text-black" style="text-decoration: none;">Student</a>
            <a asp-controller="AdminPortal" asp-action="Grade8" class="text-black" style="text-decoration: none;">/ Grade 8</a> / Section Name
        </p>
    </section>

    <!-- Add Section Button -->
    <button type="button" class="btn btn-success  mt-4" data-bs-toggle="modal" data-bs-target="#addSectionModal">
        Add Section
    </button>

    <!-- Table -->
    <table class="table table-bordered mt-2">
        <thead>
            <tr>
                <th>Name</th>
                <th>LRN</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr class="@(ViewData["ActiveMenu"]?.ToString() == "StudentDetail" ? "active fw-bold" : "")"
                style="cursor: pointer;"
                onclick="window.location.href='@Url.Action("StudentDetail", "AdminPortal", new { area = "" })';">
                <td>Nadine Borja</td>
                <td>406494150200</td>
                <td align="center">
                    <!-- Edit Button -->
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editSectionModal">
                        <i class="fas fa-edit"></i>
                    </button>

                    <!-- Delete Button -->
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteSectionModal">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</body>