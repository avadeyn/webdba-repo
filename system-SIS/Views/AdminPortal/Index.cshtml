@{
    Layout = "Admin_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}



<div class="row mb-3">
    <div class="col-12 welcome-container bg-secondary text-white rounded p-3 d-flex justify-content-between align-items-center">
        <!-- Left Section: Text -->
        <div class="welcome-text">
            <h2 class="text-3xl md:text-4xl font-bold mt-1" style="font-family: 'Potta One', sans-serif;">Welcome to Jose Rizal High School</h2>
            <p class="mt-3 text-sm md:text-base">Access the Administrator Portal to efficiently manage student enrollments, monitor academic progress, <br> schedule classes, and ensure smooth daily operations at Jose Rizal High School.</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-between mb-3">
        <!-- Graph for Students -->
        <div class="col-12 col-md-4 mb-3">
            <div class="bg-white rounded p-3 shadow-sm">
                <h3 class="text-center">Students</h3>
                <canvas id="studentsChart" class="chart"></canvas>
            </div>
        </div>

        <!-- Graph for Faculty -->
        <div class="col-12 col-md-4 mb-3">
            <div class="bg-white rounded p-3 shadow-sm">
                <h3 class="text-center">Faculty</h3>
                <canvas id="facultyChart" class="chart"></canvas>
            </div>
        </div>

        <!-- Graph for Subjects -->
        <div class="col-12 col-md-4 mb-3">
            <div class="bg-white rounded p-3 shadow-sm">
                <h3 class="text-center">Subjects</h3>
                <canvas id="subjectsChart" class="chart"></canvas>
            </div>
        </div>
    </div>
</div>

