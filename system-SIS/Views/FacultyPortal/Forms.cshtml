@{
    Layout = "Faculty_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; margin: 0;">

    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <!-- Main Content -->
    <div class="container-fluid px-3 py-4" style="background-color: rgba(220, 232, 253, 0.9); border-radius: 10px;">

        <!-- Navigation Section -->
        <section class="fixed px-3 py-2 w-100 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-user-check text-black"></i>
                <a asp-controller="FacultyPortal" asp-action="Forms" class="text-black" style="text-decoration: none;">
                    Forms
                </a>
            </p>
        </section>

        <!-- Title Section -->
        <div class="my-4">
            <h4 class="text-center" style="font-size: 1.5rem; font-weight: bold;">Downloadable Forms</h4>
        </div>

        <!-- Responsive Container for Forms (You can list the downloadable forms here) -->
        <div class="d-flex flex-column align-items-center">
            <!-- Add form items (for example) -->
            <ul class="list-unstyled">
                <li><a href="#" class="btn btn-outline-primary mb-2">Form 1 - Download</a></li>
                <li><a href="#" class="btn btn-outline-primary mb-2">Form 2 - Download</a></li>
                <li><a href="#" class="btn btn-outline-primary mb-2">Form 3 - Download</a></li>
                <!-- Add more form items here -->
            </ul>
        </div>

    </div>

</body>
