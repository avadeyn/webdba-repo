@{
    Layout = "Faculty_Layout";  // Specifies the layout to use
    ViewData["Title"] = "";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; margin: 0;">

    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <!-- Main Content -->
    <div class="container" style="background-color: rgba(220, 232, 253, 0.9); padding: 20px; border-radius: 10px;">
        <section class="fixed ml-72 px-11 py-6 w-full top-20 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-book-open text-black"></i>
                <a asp-controller="FacultyPortal" asp-action="Subject" class="text-black" style="text-decoration: none;">Subject</a>
            </p>
        </section>

        <div class="d-flex justify-content-end align-items-center mt-3">
            <!-- Incoming Grade -->
            <div class="me-2">
                <label for="dropdownIncomingGradeLevel" class="form-label fs-6 visually-hidden">Select Incoming Grade</label>
                <select class="form-select fs-6" id="dropdownIncomingGradeLevel" aria-label="Select Incoming Grade">
                    <option value="" disabled selected>Select Incoming Grade</option>
                    <option value="7">Grade 7</option>
                    <option value="8">Grade 8</option>
                    <option value="9">Grade 9</option>
                    <option value="10">Grade 10</option>
                </select>
            </div>

            <!-- School Year -->
            <div>
                <label for="dropdownSchoolYear" class="form-label fs-6 visually-hidden">Select School Year</label>
                <select class="form-select fs-6" id="dropdownSchoolYear" aria-label="Select School Year">
                    <option value="" disabled selected>Select School Year</option>
                    <option value="2020-2021">2020 - 2021</option>
                    <option value="2021-2022">2021 - 2022</option>
                    <option value="2022-2023">2022 - 2023</option>
                    <option value="2023-2024">2023 - 2024</option>
                    <option value="2024-2025">2024 - 2025</option>
                </select>
            </div>
        </div>

        <div class="container mt-3">
            <table class="table">
                <thead class="table-secondary text-white">
                    <tr>
                        <th>#</th>
                        <th>Grade/Section</th>
                        <th>Subject Name</th>
                        <th>Semester</th>
                        <th>Schedule</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>7-Mars</td>
                        <td>Araling Panlipunan</td>
                        <td>Regular</td>
                        <td>-</td>
                        <td>Wednesday 02:00 PM - 03:00 PM<br>Monday 09:00 AM - 10:00 AM</td>
                    </tr>
                    <tr>
                        <td>11-Marigold</td>
                        <td>Earth and Life Science</td>
                        <td>General Academic Strand</td>
                        <td>1st Sem</td>
                        <td>Wednesday 07:00 AM - 08:00 AM<br>Tuesday 07:00 AM - 08:00 AM</td>
                    </tr>
                    <tr>
                        <td>7-Mercury</td>
                        <td>Araling Panlipunan</td>
                        <td>Science, Technology, and Engineering</td>
                        <td>-</td>
                        <td>Wednesday 03:30 PM - 04:30 PM</td>
                    </tr>
                </tbody>
            </table>
        </div>






    </div>

</body>