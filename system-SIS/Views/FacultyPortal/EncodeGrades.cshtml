@{
    Layout = "Faculty_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<script src="~/js/faculty_portal/encodegrades.js"></script>

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; margin: 0;">

    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <!-- Main Content -->
    <div class="container-fluid p-3" style="background-color: rgba(220, 232, 253, 0.9); border-radius: 10px;">
        <section class="fixed ml-72 px-11 py-6 w-full top-20 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-user-check text-black"></i>
                <a asp-controller="FacultyPortal" asp-action="Index" class="text-black" style="text-decoration: none; font-size: 14px;">Class Advisory</a>
            </p>
        </section>

        <div class="container">
            <div class="row mb-2">
                <div class="col-12 d-flex flex-wrap justify-content-between align-items-center">
                    <!-- Encoding Grade Status -->
                    <h6 class="me-2 custom-font">
                        <strong>Encoding Grade Status:</strong>
                        <span>Closed</span>
                    </h6>
                    <!-- Subject -->
                    <h6 class="me-2 custom-font">
                        <strong>Subject:</strong>
                        <span>Araling Panlipunan</span>
                    </h6>
                    <!-- Section -->
                    <h6 class="custom-font">
                        <strong>Section:</strong>
                        <span>Mars</span>
                    </h6>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12 d-flex flex-wrap align-items-center">
                    <!-- Grade Level -->
                    <h6 class="me-2 custom-font">
                        <strong>Grade Level:</strong>
                        <span>7</span>
                    </h6>
                    <!-- Program -->
                    <h6 class="me-2 custom-font">
                        <strong>Program:</strong>
                        <span>Regular</span>
                    </h6>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table align-items-center" style="font-size: 14px;">
                    <thead>
                        <tr>
                            <th>LRN</th>
                            <th>Student Name</th>
                            <th>1st Quarter</th>
                            <th>2nd Quarter</th>
                            <th>3rd Quarter</th>
                            <th>4th Quarter</th>
                            <th>Final Grade</th>
                            <th>Remark</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- LRN as a read-only display -->
                            <td>
                                <span>523049392859</span>
                            </td>
                            <td>Aspen, Abigail Reyes Sr.</td>
                            <td>
                                <input type="text" style="width: 90px; "
                                class="form-control" maxlength="3" data-grade="true" oninput="validateGrade(this)">
                            </td>
                            <td>
                                <input type="text" style="width: 90px;"
                                class="form-control" maxlength="3" data-grade="true" oninput="validateGrade(this)">
                            </td>
                            <td>
                                <input type="text" style="width: 90px;"
                                class="form-control" maxlength="3" data-grade="true" oninput="validateGrade(this)">
                            </td>
                            <td>
                                <input type="text" style="width: 90px;"
                                class="form-control" maxlength="3" data-grade="true" oninput="validateGrade(this)">
                            </td>
                            <td class="final-grade">-</td>
                            <td class="remark">-</td>
                        </tr>
                    </tbody>
                </table>
            </div>



        </div>
    </div>
</body>
