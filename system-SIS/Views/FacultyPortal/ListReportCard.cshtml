@{
    Layout = "Faculty_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; margin: 0;">

    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <!-- Main Content -->
    <div class="container" style="background-color: rgba(220, 232, 253, 0.9); padding: 20px; border-radius: 10px;">
        <section class="fixed px-3 py-4 w-100 top-20 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-user-check text-black"></i>
                <a asp-controller="FacultyPortal" asp-action="Index" class="text-black" style="text-decoration: none;">Grades Report</a>
            </p>
        </section>

        <!-- Subject Dropdown -->
        <div class="row align-items-center">
            <!-- Dropdown on the left -->
            <div class="col-12 col-md-4 mb-2">
                <label for="dropdownSubject" class="form-label fs-6 visually-hidden">Select Subject</label>
                <select class="form-select fs-6 w-100" id="dropdownSubject" aria-label="Choose Subject">
                    <option value="" disabled selected>Select Subject</option>
                    <option value="filipino">Filipino</option>
                    <option value="english">English</option>
                    <option value="math">Mathematics</option>
                    <option value="science">Science</option>
                    <option value="ap">Araling Panlipunan (AP)</option>
                    <option value="esp">Edukasyon sa Pagpapakatao (ESP)</option>
                    <option value="tle">Technology and Livelihood Education (TLE)</option>
                    <option value="mapeh">MAPEH</option>
                </select>
            </div>

            <!-- H1 on the right -->
            <div class="col-12 col-md-8 text-md-end text-center">
                <h5><strong>Grade 7 - Mars | S.Y. 2019-2020</strong></h5>
            </div>
        </div>

        <div class="container d-flex justify-content-center align-items-center mt-4">
            <table class="table table-bordered text-center">
                <thead class="table-secondary text-white">
                    <tr>
                        <th>LRN</th>
                        <th>Student Name</th>
                        <th>1st Quarter</th>
                        <th>2nd Quarter</th>
                        <th>3rd Quarter</th>
                        <th>4th Quarter</th>
                        <th>Final Grade</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>406494150200</td>
                        <td>Aiza Mae</td>
                        <td>97</td>
                        <td>89</td>
                        <td>90</td>
                        <td>83</td>
                        <td>78</td>
                        <td>Passed</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Report Card Modal -->
    <div class="modal fade" id="reportCardModal" tabindex="-1" aria-labelledby="reportCardLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reportCardLabel">Student Grade Report</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-between mb-3">
                        <div style="flex: 1;">
                            <div style="display: block; margin-bottom: 5px;">
                                <p style="display: inline; margin-right: 5px;"><strong>Student Number:</strong></p>
                                <p style="display: inline;">406494150200</p>
                            </div>
                            <div style="display: block;">
                                <p style="display: inline; margin-right: 5px;"><strong>Student Name:</strong></p>
                                <p style="display: inline;">Joshua Cuerdo</p>
                            </div>
                        </div>

                        <div style="flex: 1; text-align: right;">
                            <div style="display: block; margin-bottom: 5px;">
                                <p style="display: inline; margin-right: 5px;"><strong>Status:</strong></p>
                                <p style="display: inline;">No Status</p>
                            </div>
                            <div>
                                <a href="#" class="text-decoration-none">CSV Download</a>
                            </div>
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th>Subjects</th>
                                <th>1st Quarter</th>
                                <th>2nd Quarter</th>
                                <th>3rd Quarter</th>
                                <th>4th Quarter</th>
                                <th>Final Grade</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Filipino</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>English</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                            <!-- Add additional subjects here -->
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">Finalize Grade Status</button>
                </div>
            </div>
        </div>
    </div>

    <!-- View Student Modal -->
    <div class="modal fade" id="ViewStudent" tabindex="-1" aria-labelledby="ViewStudentLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title d-flex align-items-center" id="ViewStudentLabel">
                        <span contenteditable="true">Edit Student Personal Data</span>
                        <i class="bi bi-pencil ms-2"></i>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <!-- Student Information -->
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <label class="form-label me-3"><strong>LRN:</strong></label>
                                <label class="form-label me-3"><strong>406494150200</strong></label>
                            </div>
                            <!-- Additional Student Information Here -->
                        </div>

                        <!-- Guardian Information -->
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <label class="form-label me-3"><strong>Parent/Guardian 1 Name:</strong></label>
                                <p class="mb-0 me-2 border rounded px-2" contenteditable="true">Mendoza, Isabella Cruz (Father)</p>
                            </div>
                            <!-- Additional Guardian Information Here -->
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Report Card Modal Trigger
        document.getElementById('reportCardLink').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent default link action
            console.log('Report Card modal triggered');
        });

        // View Student Modal Trigger
        document.getElementById('viewStudentLink').addEventListener('click', function (event) {
            event.preventDefault(); // Prevent default link action
            console.log('View Student modal triggered');
        });
    </script>

</body>
