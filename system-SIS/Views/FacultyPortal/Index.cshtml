@{
    Layout = "Faculty_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; margin: 0;">

    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <div class="welcome-container bg-secondary text-white rounded p-4 d-flex flex-column flex-md-row justify-content-between align-items-center mb-3" style="max-width: 1050px; margin: 0 auto;">
        <!-- Left Section: Text -->
        <div class="welcome-text text-center text-md-start" style="width: 100%; max-width: 1000px;">
            <h2 class="text-3xl font-bold" style="font-family: 'Potta One', sans-serif;">Welcome to Jose Rizal High School</h2>
            <p class="mt-3 text-sm md:text-base">
                Access the Faculty Portal to efficiently manage student information, monitor academic progress, schedule classes, and contribute to smooth daily operations at Jose Rizal High School.
            </p>
        </div>
    </div>

    <!-- Main Content with Consistent Width -->
    <div style="background-color: rgba(220, 232, 253, 0.9); padding: 40px; border-radius: 15px; max-width: 1050px; margin: 0 auto;">
        <div class="welcome-text text-center text-md-start rounded p-3" style="background-color: #f9f9f9; max-width: 1000px; margin: 0 auto;">
            <h4 class="text-3xl font-bold mt-1" style="color: #333;">Hello, [Name]!</h4>
            <p class="mt-3 text-sm md:text-base">
                We're so glad to see you! Explore the Jose Rizal High School student information system to easily manage student information and support the school.
            </p>
        </div>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-3 mt-3 p-3 bg-white rounded" style="max-width: 1000px; margin: 0 auto;">
            <h5 class="mb-0" style="color: #333;">Class Overview Summary</h5>
            <div class="col-12 col-md-4 mt-2 mt-md-0">
                <select class="form-select fs-6" id="dropdownSchoolYear" aria-label="Select School Year">
                    <option value="" disabled selected>Select School Year</option>
                    <option value="2020-2021">2020 - 2021</option>
                    <option value="2021-2022">2021 - 2022</option>
                    <option value="2022-2023">2022 - 2023</option>
                    <option value="2023-2024">2023 - 2024</option>
                    <option value="2024-2025">2024 - 2025</option>
                </select>
            </div>
        </div>

        <div class="row g-2 d-flex justify-content-between">
            <!-- Grade Level Div (Adjusted to the Right) -->
            <div class="col-md-4 bg-white p-3 rounded shadow d-flex flex-column justify-content-between" style="height: 100%;">
                <div>
                    <div class="mb-3">
                        <h6 style="color: #333; display: inline;">Grade Level:</h6>
                        <p style="color: #333; display: inline; margin-left: 5px;">7</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #333; display: inline;">Section:</h6>
                        <p style="color: #333; display: inline; margin-left: 5px;">Palladium</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #333; display: inline;">Total Enrolled Students:</h6>
                        <p style="color: #333; display: inline; margin-left: 5px;">40</p>
                    </div>
                    <div class="mb-3">
                        <h6 style="color: #333; display: inline;">Grade Level:</h6>
                        <p style="color: #333; display: inline; margin-left: 5px;">Palladium</p>
                    </div>
                </div>
                <a class="btn @(string.Equals(ViewData["ActiveMenu"]?.ToString(), "ClassAdvisory", StringComparison.OrdinalIgnoreCase) ? "fw-bold text-white" : "btn-outline-primary fw-bold")"
                   style="@(string.Equals(ViewData["ActiveMenu"]?.ToString(), "ClassAdvisory", StringComparison.OrdinalIgnoreCase) ? "background-color: #4E73DF;" : "")"
                   asp-area=""
                   asp-controller="FacultyPortal"
                   asp-action="ViewClassAd">
                    View Class Advisory
                </a>
            </div>

            <!-- Graph for Number of Students (Male vs Female) -->
            <div class="col-md-8 mt-3 mt-md-0">
                <div class="chart-container bg-white rounded p-4 shadow">
                    <canvas id="studentsChart" class="chart" style="max-width: 500px; height: 300px;"></canvas> <!-- Reduced canvas size -->
                </div>
            </div>
        </div>
    </div>

    <script>
        // Data for the bar chart
        const studentsData = {
            labels: ['Male', 'Female'], // X-axis labels
            datasets: [
                {
                    label: 'Number of Students',
                    data: [150, 140], // Total number of students (Male, Female)
                    backgroundColor: ['rgba(54, 162, 235, 0.7)', 'rgba(255, 99, 132, 0.7)'], // Blue and Red
                    borderColor: ['rgba(54, 162, 235, 1)', 'rgba(255, 99, 132, 1)'],
                    borderWidth: 1
                }
            ]
        };

        // Create the bar chart
        const studentsCtx = document.getElementById('studentsChart').getContext('2d');
        new Chart(studentsCtx, {
            type: 'bar',
            data: studentsData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false // No legend needed for a single dataset
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Gender'
                        }
                    },
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Number of Students'
                        }
                    }
                }
            }
        });
    </script>

</body>
