@{
    Layout = "Faculty_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; margin: 0;">

    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <!-- Main Content -->
    <div class="container-fluid p-3" style="background-color: rgba(220, 232, 253, 0.9); border-radius: 10px;">
        <section class="fixed ml-72 px-11 py-6 w-full top-20 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-user-check text-black"></i>
                <a asp-controller="FacultyPortal" asp-action="Index" class="text-black" style="text-decoration: none;">Class Advisory</a>
            </p>
        </section>

        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h4>Grade 7 - Mars | S.Y. 2019-2020</h4>
                </div>
            </div>

            <div class="d-flex flex-wrap justify-content-between mb-3">
                <div style="flex: 1;">
                    <div style="display: block; margin-bottom: 5px;">
                        <p style="display: inline; margin-right: 5px;"><strong>Class Adviser:</strong></p>
                        <p style="display: inline;">Althea Asis</p>
                    </div>
                    <div style="display: block;">
                        <p style="display: inline; margin-right: 5px;"><strong>No. of Student:</strong></p>
                        <p style="display: inline;">10</p>
                    </div>
                </div>

                <div style="flex: 1; text-align: right;">
                    <div style="display: block; margin-bottom: 5px;">
                        <p style="display: inline; margin-right: 5px;"><strong>Program</strong></p>
                        <p style="display: inline;">Regular</p>
                    </div>
                    <a class="btn @(string.Equals(ViewData["ActiveMenu"]?.ToString(), "ClassAdvisory", StringComparison.OrdinalIgnoreCase) ? "fw-bold text-white" : "btn-outline-primary fw-bold")"
                       style="@(string.Equals(ViewData["ActiveMenu"]?.ToString(), "ClassAdvisory", StringComparison.OrdinalIgnoreCase) ? "background-color: #4E73DF;" : "")"
                       asp-area=""
                       asp-controller="FacultyPortal"
                       asp-action="ListReportCard">
                        Grades Report
                    </a>
                </div>
            </div>

            <div class="table-responsive mt-2">
                <table class="table table-striped table-bordered">
                    <thead class="table-secondary text-white">
                        <tr>
                            <th>LRN</th>
                            <th>Student Name</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>406494150200</td>
                            <td>Nadine Borja</td>
                            <td>Female</td>
                            <td>No Status</td>
                            <td>
                                <!-- Dropdown for additional actions -->
                                <div class="dropdown">
                                    <button class="btn btn-light btn-sm dropdown-toggle"
                                            type="button"
                                            id="dropdownMenuButton"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false"
                                            style="border: none; background: none;">
                                        <i class="fas fa-ellipsis-v"></i> <!-- Ellipsis icon -->
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <!-- Report Card link -->
                                        <li>
                                            <a class="dropdown-item"
                                               href="#"
                                               data-bs-toggle="modal"
                                               data-bs-target="#reportCardModal"
                                               id="reportCardLink">
                                                <i class="fas fa-file-alt me-2"></i> Report Card
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item"
                                               href="#"
                                               data-bs-toggle="modal"
                                               data-bs-target="#ViewStudent"
                                               id="viewStudentLink">
                                                <i class="fas fa-user me-2"></i> View Student
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Report Card Modal -->
    <div class="modal fade" id="reportCardModal" tabindex="-1" aria-labelledby="reportCardLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reportCardLabel">Student Grade Report</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-wrap justify-content-between mb-3">
                        <div style="flex: 1;">
                            <div style="display: block; margin-bottom: 5px;">
                                <p style="display: inline; margin-right: 5px;"><strong>Student Number:</strong></p>
                                <p style="display: inline;">406494150200</p>
                            </div>
                            <div style="display: block;">
                                <p style="display: inline; margin-right: 5px;"><strong>Student Name:</strong></p>
                                <p style="display: inline;">Joshua Cuerdo</p>
                            </div>
                        </div>

                        <div style="flex: 1; text-align: right;">
                            <div style="display: block; margin-bottom: 5px;">
                                <p style="display: inline; margin-right: 5px;"><strong>Status:</strong></p>
                                <p style="display: inline;">No Status</p>
                            </div>
                            <div>
                                <a asp-controller="FacultyStudentGradeReport" asp-action="GeneratePdfGrade" class="dropdown-item btn-outline-info">
                                    PDF File
                                </a>
                            </div>
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead class="table-secondary text-white">
                            <tr>
