@{
    Layout = "Faculty_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; margin: 0;">

    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <!-- Main Content -->
    <div class="container-fluid p-3" style="background-color: rgba(220, 232, 253, 0.9); border-radius: 10px;">

        <section class="fixed ml-72 px-11 py-6 w-full top-20 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-user-check text-black"></i>
                <a asp-controller="FacultyPortal" asp-action="Index" class="text-black" style="text-decoration: none; font-size: 14px;">Change of grades</a>
            </p>
        </section>

        <div class="col-6 col-md-3 mt-2 mb-3 mt-md-0 ms-auto">
            <select class="form-select fs-6" id="dropdownSchoolYear">
                <option value="All">All</option>
                <option value="Pending">Pending</option>
                <option value="On Hold">On Hold</option>
                <option value="Declined">Declined</option>
            </select>
        </div>



        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-header">
                    <tr>
                        <th>#</th>
                        <th>Request Id</th>
                        <th>Faculty Name</th>
                        <th>Section</th>
                        <th>Subject</th>
                        <th>Quarter</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>REQ-602709</td>
                        <td>Nadine Borja</td>
                        <td>Palladium</td>
                        <td>Earth and Life Science</td>
                        <td>1</td>
                        <td>12/08/2024</td>
                        <td>Pending</td>
                        <td>
                            <a style="cursor: pointer;" onclick="window.location.href='@Url.Action("RCgrades", "FacultyPortal", new { area = "", id = 1 })';">Review</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

        
        

</body>
