@{
    Layout = "Faculty_Layout";
    ViewData["Title"] = "MasterList";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; margin: 0;">
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <div class="container-fluid px-3 py-4" style="background-color: rgba(220, 232, 253, 0.9); border-radius: 10px;">
        <section class="fixed px-3 py-2 w-100 left-0" style="font-weight: bold;">
            <p class="text-sm text-black fs-5">
                <i class="fas fa-users text-black"></i>
                <a asp-controller="FacultyPortal" asp-action="Subject" class="text-black" style="text-decoration: none;">Masterlist</a>
            </p>
        </section>

        <!-- Table -->
        <div class="table-responsive mt-2">
            <table class="table">
                <thead>
                    <tr>
                        <th style="background-color: #162051; color: white; border-top-left-radius: 10px;">Grade/Section</th>
                        <th style="background-color: #162051; color: white;">Subject Name</th>
                        <th style="background-color: #162051; color: white;">Semester</th>
                        <th style="background-color: #162051; color: white;">Schedule</th>
                        <th style="background-color: #162051; color: white; border-top-right-radius: 10px;">File</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>7-Mars</td>
                        <td>Araling Panlipunan</td>
                        <td>Regular</td>
                        <td>
                            Wednesday 02:00 PM - 03:00 PM<br>
                            Monday 09:00 AM - 10:00 AM
                        </td>
                        <td>
                            <a asp-controller="Faculty_Masterlist"
                               asp-action="GeneratePdf"
                               class="dropdown-item text-primary">
                                <i class="fas fa-download"></i> PDF File
                            </a>
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
