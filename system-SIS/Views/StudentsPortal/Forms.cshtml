@{
    Layout = "Student_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row g-4">
        <!-- Document Card 1 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded h-100">
                <div class="card-body d-flex flex-column text-center">
                    <img src="/images/forms.png" class="card-img-top mb-3" width="80" alt="Form Image">
                    <h5 class="card-title" style="color:#172154">Admission Form</h5>
                    <p class="text-secondary flex-grow-1">Fill out this form to apply for admission.</p>
                    <a href="/path/to/form.pdf" class="btn btn-primary mt-3" style="color:#1566FF; background-color:#DCE8FD;" download>Download</a>
                </div>
            </div>
        </div>

        <!-- Document Card 2 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded h-100">
                <div class="card-body d-flex flex-column text-center">
                    <img src="/images/forms.png" class="card-img-top mb-3" width="80" alt="Form Image">
                    <h5 class="card-title" style="color:#172154">Enrollment Form</h5>
                    <p class="text-secondary flex-grow-1">Complete this form to enroll in your chosen courses.</p>
                    <a href="/path/to/form.pdf" class="btn btn-primary mt-3" style="color:#1566FF; background-color:#DCE8FD;" download>Download</a>
                </div>
            </div>
        </div>

        <!-- Document Card 3 -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded h-100">
                <div class="card-body d-flex flex-column text-center">
                    <img src="/images/forms.png" class="card-img-top mb-3" width="80" alt="Form Image">
                    <h5 class="card-title" style="color:#172154">Scholarship Application</h5>
                    <p class="text-secondary flex-grow-1">Apply for financial aid using this form.</p>
                    <a href="/path/to/form.pdf" class="btn btn-primary mt-3" style="color:#1566FF; background-color:#DCE8FD;" download>Download</a>
                </div>
            </div>
        </div>
    </div>
</div>






