@{
    Layout = "Student_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<!-- Greeting Section -->
<div class="container mt-5 py-4 px-5 rounded shadow position-relative" style="background-color: #DCE8FE;">
    <div class="row align-items-center">
        <!-- Text Section -->
        <div class="col-md-8">
            <h2 class="mb-3">Welcome to Jose Rizal High School!</h2>
            <p>
                Your academic journey starts here. Explore your classes, connect with your teachers, <br />and achieve your educational goals.
            </p>
        </div>

        <!-- Image Section -->
        <div class="col-md-4 text-end">
            <img src="~/images/welcome.png" alt="Books illustration" class="img-fluid" style="max-width: 220px;">
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="container mt-4">
    <div class="row g-3">
        <!-- Card 1 -->
        <div class="col-md-4">
            <div class="card shadow-sm rounded-lg p-4" style="background-color: #F2F8FF; border: 3px solid #DCE8FE;">
                <div class="d-flex align-items-center">
                    <img src="~/images/forms.png" alt="Forms Icon" class="me-3" style="width: 50px; height: 50px;">
                    <div>
                        <h3 class="mb-0 fw-bold" style="color: #172154;">4</h3>
                        <small style="color: #172154;">FORMS</small>
                    </div>
                </div>
            </div>
        </div>
        <!-- Card 2 -->
        <div class="col-md-4">
            <div class="card shadow-sm rounded-lg p-4" style="background-color: #F2F8FF; border: 3px solid #DCE8FE;">
                <div class="d-flex align-items-center">
                    <img src="~/images/grade-level.png" alt="Grade Level Icon" class="me-3" style="width: 50px; height: 50px;">
                    <div>
                        <h3 class="mb-0 fw-bold" style="color: #172154;">9</h3>
                        <small style="color: #172154;">GRADE LEVEL</small>
                    </div>
                </div>
            </div>
        </div>
        <!-- Card 3 -->
        <div class="col-md-4">
            <div class="card shadow-sm rounded-lg p-4" style="background-color: #F2F8FF; border: 3px solid #DCE8FE;">
                <div class="d-flex align-items-center">
                    <img src="~/images/subjects.png" alt="Subjects Icon" class="me-3" style="width: 50px; height: 50px;">
                    <div>
                        <h3 class="mb-0 fw-bold" style="color: #172154;">8</h3>
                        <small style="color: #172154;">SUBJECTS</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Announcements Section -->

<div class="container mt-4">
    <div class="note p-2 rounded shadow-sm" style="background-color: #DCE8FE;">
        <div class="announce-section bg-white p-3 rounded shadow mb-2 transition-effect">
            <h5 class="fw-bold mb-2 fs-5" style="color: #172154;">New Enrollees</h5>
            <p class="mb-0 fs-6">
                Access the Administrator Portal to efficiently manage student enrollments, monitor academic progress,
                schedule classes, and ensure smooth daily operations at Jose Rizal High School.
            </p>
        </div>
        <div class="announce-section bg-white p-3 rounded shadow mb-2 transition-effect">
            <h5 class="fw-bold mb-2 fs-5" style="color: #172154;">New Enrollees</h5>
            <p class="mb-0 fs-6">
                Access the Administrator Portal to efficiently manage student enrollments, monitor academic progress,
                schedule classes, and ensure smooth daily operations at Jose Rizal High School.
            </p>
        </div>
    </div>
</div>

<style>
    .transition-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .transition-effect:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
        }
</style>


