@{
    Layout = "Student_Layout";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}

<!-- Greeting Section -->
<div class="container mt-5 py-4 rounded shadow position-relative" style="background-color: #DCE8FE;">
    <div class="row align-items-center">
        <!-- Text Section -->
        <div class="col-md-8">
            <h2 class="mb-3">Welcome to Jose Rizal High School!</h2>
            <p>
                Your academic journey starts here. Explore your classes, connect with your teachers, <br />and achieve your educational goals.
            </p>
        </div>
    </div>

    <!-- Image Section -->
    <div class="position-absolute end-0 top-50 translate-middle-y" style="transform: translate(50%, -50%);">
        <img src="~/images/welcome.png" alt="Books illustration" class="img-fluid" style="width: 250px;">
    </div>
</div>

<!-- Stats Section -->
<div class="container mt-4">
    <div class="row g-3">
        <!-- Active Projects -->
        <div class="col-md-4">
            <div class="card shadow-sm rounded-lg p-3 bg-warning">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h4 class="mb-0 fw-bold">20</h4>
                        <small class="text-muted">Active projects</small>
                    </div>
                    <div class="badge bg-success text-white py-2 px-3">
                        $8,261
                    </div>
                </div>
                <img src="path-to-icon1.svg" alt="Icon" class="mt-3 ms-auto" style="width: 50px;">
            </div>
        </div>
        <!-- Ongoing Tasks -->
        <div class="col-md-4">
            <div class="card shadow-sm rounded-lg p-3 bg-info">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h4 class="mb-0 fw-bold">58</h4>
                        <small class="text-muted">Ongoing tasks</small>
                    </div>
                    <div class="badge bg-primary text-white py-2 px-3">
                        78%
                    </div>
                </div>
                <img src="path-to-icon2.svg" alt="Icon" class="mt-3 ms-auto" style="width: 50px;">
            </div>
        </div>
        <!-- Total Hours -->
        <div class="col-md-4">
            <div class="card shadow-sm rounded-lg p-3 bg-success">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h4 class="mb-0 fw-bold">4h 28m</h4>
                        <small class="text-muted">Total hours</small>
                    </div>
                    <div class="badge bg-danger text-white py-2 px-3">
                        <i class="bi bi-clock"></i>
                    </div>
                </div>
                <img src="path-to-icon3.svg" alt="Icon" class="mt-3 ms-auto" style="width: 50px;">
            </div>
        </div>
    </div>
</div>

<!-- Announcements Section -->

<div class="container mt-4">
    <div class="note p-2 rounded shadow-sm" style="background-color: #DCE8FE;">
        <div class="announce-section bg-white p-3 rounded shadow mb-2 transition-effect">
            <h5 class="fw-bold mb-2 fs-5">New Enrollees</h5>
            <p class="mb-0 fs-6">
                Access the Administrator Portal to efficiently manage student enrollments, monitor academic progress,
                schedule classes, and ensure smooth daily operations at Jose Rizal High School.
            </p>
        </div>
        <div class="announce-section bg-white p-3 rounded shadow mb-2 transition-effect">
            <h5 class="fw-bold mb-2 fs-5">New Enrollees</h5>
            <p class="mb-0 fs-6">
                Access the Administrator Portal to efficiently manage student enrollments, monitor academic progress,
                schedule classes, and ensure smooth daily operations at Jose Rizal High School.
            </p>
        </div>
    </div>
</div>

<style>
    .transition-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .transition-effect:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
        }
</style>


