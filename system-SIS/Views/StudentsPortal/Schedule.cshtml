<style>
    .container {
        padding: 10px;
    }

    .grades-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 20px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

    .grades-header {
        background-color: #DCE8FD;
        color: #1566FF;
        font-size: 1.25rem;
        padding: 10px 15px;
        font-weight: bold;
    }

    /* .information-bar { */
    /*     height: 5px; */
    /*     background-color: #DCE8FD; */
    /* } */

    .table-container {
        padding: 15px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: center;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    th {
        background-color: #DCE8FD;
        color: #1566FF;
    }

    /* Custom Row Colors */
    td.bg-light {
        background-color: #f8f9fa !important;
    }

    td.bg-success {
        background-color: #172154 !important;
        color: #FAFAFA !important;
    }

    td.bg-danger {
        background-color: #DCE8FD !important;
        color: #172154 !important;
    }

    td.bg-warning {
        background-color: #172154 !important;
        color: #FAFAFA !important;
    }

    td.bg-info {
        background-color: #DCE8FD !important;
        color: #172154 !important;
    }

    td.bg-primary {
        background-color: #172154 !important;
        color: #FAFAFA !important;
    }

    td.bg-secondary {
        background-color: #DCE8FD !important;
        color: #172154 !important;
    }
</style>
       



