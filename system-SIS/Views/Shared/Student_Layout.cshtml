<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - system_SIS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/system_SIS.styles.css" asp-append-version="true" />

    <style>
        body {
            color: aqua;
        }
        /* Styling for active navigation item */
        .navbar-nav .nav-item .nav-link.active {
            background-color: aqua;
            color: black; /* Ensure contrast with background */
            font-weight: bold; /* Optional: Make active item bold */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <!-- Logo -->
                <img src="~/images/logo.png" alt="Faculty Portal Logo" style="height: 90px;" />

                <!-- Navbar toggler button (centered on mobile) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar collapse and navigation items -->
                <div class="navbar-collapse collapse w-100">
                    <ul class="navbar-nav d-flex justify-content-center w-100 m-0">
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark @(ViewData["ActiveMenu"]?.ToString() == "Home" ? "active" : "")" asp-area="" asp-controller="StudentsPortal" asp-action="Home">Home</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark @(ViewData["ActiveMenu"]?.ToString() == "Schedule" ? "active" : "")" asp-area="" asp-controller="StudentsPortal" asp-action="Schedule">Schedules</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark @(ViewData["ActiveMenu"]?.ToString() == "Grades" ? "active" : "")" asp-area="" asp-controller="StudentsPortal" asp-action="Grades">Grades</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark @(ViewData["ActiveMenu"]?.ToString() == "Forms" ? "active" : "")" asp-area="" asp-controller="StudentsPortal" asp-action="Forms">Forms</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - system_SIS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
