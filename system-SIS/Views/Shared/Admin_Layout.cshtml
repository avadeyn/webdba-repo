<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Admin_Layout"] Admin Portal</title>
    <link rel="icon" href="~/images/logo.png" sizes="48x48">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/system_SIS.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Potta+One&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            position: relative; /* Required for positioning the pseudo-element */
            background-image: url('~/images/bgjr.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            padding: 20px;
            border-radius: 10px;
            color: #172154; /* Dark blue for normal text */
            font-family: 'Poppins', sans-serif; /* Apply Poppins font */
        }

            body::before {
                content: ""; /* Required for the pseudo-element */
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(128, 128, 128, 0.7); /* Gray with 70% opacity */
                z-index: -1; /* Ensures the overlay is behind the content */
            }


        .navbar {
            border-radius: 10px;
        }

        .navbar-nav .nav-item .nav-link.active {
            color: #1566FF;
            font-weight: bold;
        }

        .navbar-nav .nav-item .nav-link {
            color: #172154;
        }

        .navbar-nav {
            justify-content: center;
        }

        .profile-photo {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 5px;
            padding: 5px;
        }

            .user-info p {
                margin: 0;
            }

        header {
            background-color: #fafafa;
            border-radius: 10px;
        }

        .container1 {
            background-color: #fafafa;
            padding: 20px;
            border-radius: 10px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <!-- Logo -->
                <img src="~/images/logo.png" alt="Faculty Portal Logo" class="img-fluid" style="height: 90px;" />

                <!-- Hamburger Menu for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item me-3">
                            <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "Index" || ViewData["ActiveMenu"] == null ? "active fw-bold" : "")" asp-area="" asp-controller="AdminPortal" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "Enrollments" ? "active fw-bold" : "")" asp-area="" asp-controller="AdminPortal" asp-action="Enrollments">
                                <i class="fas fa-user-check"></i> Enrollments
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "Student" ? "active fw-bold" : "")" asp-area="" asp-controller="AdminPortal" asp-action="Student">
                                <i class="fas fa-user-graduate"></i> Student
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "Subject" ? "active fw-bold" : "")" asp-area="" asp-controller="AdminPortal" asp-action="Subject">
                                <i class="fas fa-book"></i> Subject
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "Schedule" ? "active fw-bold" : "")" asp-area="" asp-controller="AdminPortal" asp-action="Schedule">
                                <i class="fas fa-calendar-alt"></i> Schedules
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "Forms" ? "active fw-bold" : "")" asp-area="" asp-controller="AdminPortal" asp-action="Forms">
                                <i class="fas fa-file-alt"></i> Forms
                            </a>
                        </li>
                    </ul>

                    <!-- User Info -->
                    <div class="d-flex align-items-center">
                        <img src="~/images/profile-placeholder.png" alt="User Photo" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" />
                        <div>
                            <p class="mb-0 fw-semibold text-primary">[NAME]</p>
                            <p class="mb-0 small text-info">Administrator</p>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container1">
            &copy; 2025 - system_SIS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
