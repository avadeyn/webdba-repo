@model Account;

@{
    Layout = "_Account";  // Specifies the layout to use
    ViewData["Title"] = "Signin";
}

<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-10 col-lg-8 col-xl-6 col-xxl-4">
                    <div class="card mb-0">
                        <div class="card-body">
                            <!-- Logo Section -->
                            <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                <img src="../assets/images/logos/dark-logo.svg" width="180" alt="Dark Logo">
                            </a>
                            <p class="text-center mb-4">Your Social Campaigns</p>

                            <!-- Form Section -->
                            <form asp-action="Signin" method="post">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <!-- Username Input -->
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input type="text" class="form-control" name="email" id="email" placeholder="Enter your email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <!-- Password Input -->
                                <div class="mb-4">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input type="Password" class="form-control" name="password" id="password" placeholder="Enter your password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <!-- Forgot Password Link -->
                                <div class="d-flex justify-content-between mb-4">
                                    <a class="text-primary fw-bold" asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
                                </div>

                                <!-- Sign In Button -->
                                <button type="submit" value="Signin" class="btn btn-primary w-100 fs-4 mb-4 rounded-2">
                                    Sign In
                                </button>

                                <!-- Create Account Link -->
                                <div class="d-flex align-items-center justify-content-center">
                                    <p class="fs-4 mb-0 fw-bold">New to Spike?</p>
                                    <a class="text-primary fw-bold ms-2" asp-controller="Account" asp-action="Signup">
                                        Create an account
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>










































