@{
    Layout = "Account";  // Specifies the layout to use
    ViewData["Title"] = "Home Page";
}
<div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="container">
            <h2 class="text-center">Sign In</h2>
            <form method="post" action="/your-login-action">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="email" required />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="password" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Sign in</button>
            </form>

            <div class="d-flex justify-content-between mt-3">
                <a asp-controller="Account" asp-action="ForgotPassword">Forgot password</a>

                <a href="@Url.Action("Signup", "Account")">Create an account</a>
            </div>
        </div>
    </div>

   