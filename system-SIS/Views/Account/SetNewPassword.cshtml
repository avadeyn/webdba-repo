@{
    ViewData["Title"] = "New Password";
}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow: hidden; margin: 0; height: 100vh;">
    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 9"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -2;">

    <!-- Transparent Overlay -->
    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(220, 232, 253, 0.9); z-index: -1;"></div>

    <!-- Content Wrapper (Centered Form) -->
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-sm" style="width: 400px;">
            <div class="card-body text-center">
                <img src="~/images/logo.png" alt="Logo" class="mb-4" width="50">
                <h5 class="mb-2">Set new password</h5>
                <p class="text-muted mb-4">Must be at least 8 characters.</p>
                <form>
                    <div class="mb-3 text-start">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Enter your password">
                    </div>
                    <div class="mb-4 text-start">
                        <label for="confirmPassword" class="form-label">Confirm password</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm your password">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Reset password</button>
                </form>
                <a href="@Url.Action("Signin", "Account")" class="d-block mt-3 text-decoration-none">← Back to log in</a>
            </div>
        </div>
    </div>
</body>
