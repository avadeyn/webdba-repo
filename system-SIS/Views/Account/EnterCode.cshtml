@model Account;

@{
    Layout = "~/Views/Shared/_Account.cshtml"; // Specifies the layout to use
    ViewData["Title"] = "Enter Code"; // Sets the title of the page

}

<body class="position-relative bg-image" style="font-family: 'Poppins', sans-serif; overflow-x: hidden; height: 100vh; width: 100vw; margin: 0;">
    <!-- Background Image -->
    <img src="~/images/bgjr.png"
         alt="Decorative background representing Grade 7"
         class="img-fluid w-100"
         style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-sm" style="width: 400px;">
            <div class="card-body text-center">
                <img src="your-logo.svg" alt="Logo" class="mb-4" width="50">
                <h5 class="mb-2">Verify Account</h5>
                <p>Enter the 4-digit code sent to your number.</p>

                <!-- Form -->
                <form asp-action="SetNewPassword" method="post">
                    <input class="form-control-plaintext" readonly value="@ViewData["PhoneNumber"]">
                    <!-- Code Input Boxes -->
                    <div class="d-flex justify-content-center gap-3 mb-4">
                        <input type="text" class="form-control text-center" maxlength="1" style="width: 60px; height: 60px; font-size: 1.5rem; padding: 0;">
                        <input type="text" class="form-control text-center" maxlength="1" style="width: 60px; height: 60px; font-size: 1.5rem; padding: 0;">
                        <input type="text" class="form-control text-center" maxlength="1" style="width: 60px; height: 60px; font-size: 1.5rem; padding: 0;">
                        <input type="text" class="form-control text-center" maxlength="1" style="width: 60px; height: 60px; font-size: 1.5rem; padding: 0;">
                    </div>

                    <!-- Continue Button -->
                    <button type="submit" class="btn btn-primary w-100">Continue</button>
                </form>

                <!-- Resend Link -->
                <p class="mt-3">
                    Didn't receive the OTP (One-Time-Pin)? <a href="#" class="text-decoration-none">Click to resend</a>
                </p>

                <!-- Navigation Links -->
                <a href="@Url.Action("Signin", "Account")" class="d-block mt-3 text-decoration-none">← Back to log in</a>
            </div>
        </div>
    </div>
</body>
